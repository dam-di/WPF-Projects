<Window x:Class="Project_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Source="{StaticResource fondoAzulSource}" Stretch="Fill"/>
        <Image Grid.Row="0" Grid.Column="2" Source="{StaticResource fondoCiudadSource}" Stretch="Fill"/>
        <Image Grid.Row="1" Grid.Column="0" Source="{StaticResource fondoPuebloSource}" Stretch="Fill"/>
        <Image Grid.Row="1" Grid.Column="1" Source="{StaticResource fondoVerdeSource}" Stretch="Fill"/>

        <Button Style="{DynamicResource ButtonStyle1}" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" />

    </Grid>
</Window>
